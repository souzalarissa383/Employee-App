{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true, 
    "jsx": "react-native", 
    "module": "esnext", 
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true, 
    "resolveJsonModule": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true, 
    "target": "esnext", 
    "lib": ["dom", "esnext"], 
    "baseUrl": ".", 
    "paths": {
      "@domain/*": ["src/domain/*"], 
      "@tests/*": ["tests/*"], 
      "@presentation/*": ["src/presentation/*"], 
      "@usecases/*": ["src/usecases/*"], 
      "@data/*": ["src/data/*"] 
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/**/*", 
    "tests/**/*" 
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts", 
    "**/*.test.ts" 
  ]
}